<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        android:drawable="@drawable/rounded_button_pressed"/>

    <item
        android:state_pressed="false"
        android:drawable="@drawable/rounded_button_unpressed" />

    <item>
        <shape>
            <solid android:color="#EC6118"/>
            <corners android:bottomRightRadius="0.1dp"
                android:bottomLeftRadius="7dip"
                android:topLeftRadius="7dip"
                android:topRightRadius="0.1dp"/>
        </shape>
    </item>

</selector>